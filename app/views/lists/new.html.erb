<h2>New list</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@list) do |f| %>

      <div class="input-field col s6">
        <%= f.label :name ,class: "validate" %><br />
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
</div>
